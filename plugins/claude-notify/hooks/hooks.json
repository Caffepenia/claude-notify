{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/notify.sh stop 'Finished working'",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f /tmp/claude-notify-question-pending ]; then rm -f /tmp/claude-notify-question-pending; exit 0; fi; ${CLAUDE_PLUGIN_ROOT}/hooks/notify.sh permission 'Needs your permission to proceed'",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/notify.sh idle 'Has been waiting for your input'",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/notify.sh cancel",
            "timeout": 3
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "AskUserQuestion|ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "touch /tmp/claude-notify-question-pending && ${CLAUDE_PLUGIN_ROOT}/hooks/notify.sh question 'Has a question for you'",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
